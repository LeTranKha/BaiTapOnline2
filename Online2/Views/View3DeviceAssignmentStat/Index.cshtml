@model IEnumerable<View3DeviceAssignmentStat>

@{
    ViewData["Title"] = "Thống kê Cấp phát theo Thiết bị";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().DeviceCode)</th>
            <th>@Html.DisplayNameFor(model => model.First().DeviceName)</th>
            <th>@Html.DisplayNameFor(model => model.First().TotalAssigned)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DeviceCode)</td>
                <td>@Html.DisplayFor(modelItem => item.DeviceName)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalAssigned)</td>
            </tr>
        }
    </tbody>
</table>